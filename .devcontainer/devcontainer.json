{
  "name": "CDN Express Dev",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "app",  // Le service principal est 'app' maintenant
  "forwardPorts": [
    3000,  // Le port 3000 est exposé pour l'application
    8080     // Ajout du port 80 pour accéder à NGINX (si nécessaire)
  ],
  "workspaceFolder": "/workspace",
  "settings": {
    "editor.formatOnSave": true,
    "terminal.integrated.defaultProfile.linux": "usr/bin/bash",
    "terminal.integrated.profiles.linux": {
      "bash": {
        "path": "/bin/bash"
      },
      "zsh": {
        "path": "/bin/zsh"
      },
      "sh": {
        "path": "/bin/sh"
      }
    }
  },
  "extensions": [
    "ms-azuretools.vscode-docker",
    "eamodio.gitlens"
  ],
  "remoteUser": "node"
}
